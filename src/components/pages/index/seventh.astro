        }

        .description {
          font-family: 'Mulish', sans-serif;
          font-style: normal;
          font-weight: 400;
        }
      }
    }

    .more {
      border: 1px solid var(--color-blue);
      color: var(--color-blue);
      padding: 15px 30px;
      border-radius: 86px;
      transition: 0.35s;
      margin: 0 auto;
      font-size: 20px;

      &:hover {
        background-color: var(--color-blue);
        color: #fff;
      }
    }

    @media screen and (max-width: 480px) {
      padding: 50px 15px;
      .title {
        font-size: 20px;
      }
      .list {
        grid-template-columns: 1fr;
      }
    }
  }
