---
import Layout from '../layouts/main.astro';
import ArticleCard from '../components/global/article-card.astro';
import VideoIcon from '../components/icons/video.astro';
import ChevronLeftPagination from '../components/icons/chevron-left-pagination.astro';
import ChevronRightPagination from '../components/icons/chevron-right-pagination.astro';
import ChevronRightMini from '../components/icons/chevron-right-mini.astro';
---

<Layout>
  <div class='academy-page'>
    <div class='animate-header'>
      <div class='page-info'>
        <div class='text'>
          <span>Discover TLC</span>
          <ChevronRightMini />
          <span>Team TLC</span>
          <ChevronRightMini />
          <span>TLC Academy</span>
        </div>
      </div>
  
      <div class='header'>
        <div class='container'>
          <img src='/pictures/academy/1.png' />
          <div class='title H1'>TLC Academy</div>
          <div class='description body-1'>TLC Nursing offers continuing education training through our partnership with Relias Learning</div>
        </div>
      </div>
    </div>
    

    <div class='animate-content'>
      <div class='first container'>
        <div class='video'>
          <iframe  src="https://www.youtube.com/embed/dQw4w9WgXcQ" title="Rick Astley - Never Gonna Give You Up (Official Music Video)" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
        </div>
        <div class='bottom'>
          <a class='H3' href='https://www.tlcnursing.training.reliaslearning.com/' target='_blank'>https://www.tlcnursing.training.reliaslearning.com/</a>
          <div class='H3'>Our Nurse Educators run TLC's In-House Ongoing Education Program</div>
        </div>
      </div>
  
      <div class='second'>
        <div class='container'>
          <div class='title H1'>All videos</div>
  
          <div class='list'>
  
            <div class='block'>
              <div class='top'>
                <img src='/pictures/academy/2.jpeg' />
                <div class='icon'><VideoIcon /></div>
              </div>
              <div class='name H4'>Residential, Commercial and Multifamily</div>
            </div>
  
            <div class='block'>
              <div class='top'>
                <img src='/pictures/academy/2.jpeg' />
                <div class='icon'><VideoIcon /></div>
              </div>
              <div class='name H4'>Residential, Commercial and Multifamily</div>
            </div>
  
            <div class='block'>
              <div class='top'>
                <img src='/pictures/academy/2.jpeg' />
                <div class='icon'><VideoIcon /></div>
              </div>
              <div class='name H4'>Residential, Commercial and Multifamily</div>
            </div>
  
            <div class='block'>
              <div class='top'>
                <img src='/pictures/academy/2.jpeg' />
                <div class='icon'><VideoIcon /></div>
              </div>
              <div class='name H4'>Residential, Commercial and Multifamily</div>
            </div>
  
          </div>
  
          <div class='page-pagination'>
            <div class='wrapper'>
              <div class='item'><ChevronLeftPagination /></div>
              <div class='item active'>1</div>
              <div class='item'>2</div>
              <div class='item'>...</div>
              <div class='item'>8</div>
              <div class='item'><ChevronRightPagination /></div>
            </div>
          </div>
        </div>
      </div>
  
      <div class='third container'>
        <ArticleCard />
        <ArticleCard />
        <ArticleCard />
      </div>
    </div>

  </div>
</Layout>

<style lang='scss'>
.academy-page {
  
  .header {
    background-color: #EEF5FF;
    padding: 60px 0;
    color: var(--color-blue);

    .container {
      max-width: 630px;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
      text-align: center;

      img {
        width: 300px;
      }
    }
  }


  .first {
    background-color: #fff;
    padding: 50px 0;

    display: flex;
    flex-direction: column;
    align-items: center;

    text-align: center;

    .video {
      background-color: var(--color-gray);
      max-width: 890px;
      width: 100%;
      aspect-ratio: 16 / 9;
      margin-top: -90px;
      border-radius: 14px;
      overflow: hidden;
      margin-bottom: 50px;

      position: relative;

      iframe {
        width: 100%;
        aspect-ratio: 16 / 9;
      }
    }
  }

  .second {
    background-color: #F6F7F9;
    padding: 54px 0;

    .container {
      .title {
        margin-bottom: 32px;
      }
      .list {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;

        .block {
          background-color: #fff;
          border-radius: 14px;
          overflow: hidden;

          .top {
            position: relative;
            height: 300px;

            display: flex;
            align-items: center;
            justify-content: center;

            img {
              width: 100%;
              height: 100%;
              object-fit: cover;
              position: absolute;
            }

            .icon {
              position: relative;
            }
          }

          .name {
            padding: 24px;
          }
        }
      }
    }
  }

  .third {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(330px, 1fr));
    gap: 30px;
    padding: 80px 0;
  }

  @media screen and (max-width: 912px) {
    .header {
      padding: 40px 0 80px 0;
      .container {
        justify-content: center;
        gap: 8px;
        img {
          width: 170px;
        }
        .title {
          font-size: 28px;
        }
        .description {
          font-size: 16px;
        }
      }
    }
    .first {
      .video {
      }
      .bottom {
        .H3 {
          font-size: 14px;
        }
      }
    }
    .second {
      .container {
        .title {
          font-size: 28px;
        }
        .list {
          grid-template-columns: 1fr;
        }
      }
    }
  }
}
</style>