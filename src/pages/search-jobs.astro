          column-gap: 30px;
          row-gap: 10px;

          .input {
            border-radius: 8px;
            border: 1px solid rgba(114, 127, 153, 0.50);
            display: flex;
            align-items: center;
            padding: 10px 20px;

            .icon {
              height: 24px;
            }

            input {
              width: 100%;
            }
          }
        }

        .buttons {
          display: grid;
          grid-template-columns: 2fr 1fr;
          gap: 8px;

          .search-button {
            background-color: var(--color-blue);
            border-radius: 86px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            padding: 15px 0;
            height: 45px;

            .icon {
              height: 15px;
              margin-right: 5px;
            }
          }
          .reset-button {
            border-radius: 86px;
            border: 1px solid var(--color-blue);
            color: var(--color-blue);
            transition: 0.35s;

            &:hover {
              background-color: var(--color-blue);
              color: #fff;
            }
          }
        }
      }

      .box {

        .head {
          display: flex;
          align-items: center;
          justify-content: space-between;
          margin-bottom: 25px;

          button {
            display: flex;
            align-items: center;

            .icon {
              height: 30px;
            }
          }

          .enabled {
            border-radius: 8px;
            border: 1px solid #E4E3E3;
            background: #F6F7F9;
            padding: 2px 15px;
          }
        }

        .bottom {
          display: grid;
          grid-template-columns: 1fr 1fr;
          gap: 30px;
          align-items: start;

          .list {
            display: flex;
            flex-direction: column;
            gap: 30px;

            .block {
              display: grid;
              grid-template-columns: 100px 1fr;

              img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 8px 0 0 8px;
              }

              .right {
                padding: 20px 30px;
                border-right: 1px solid var(--color-gray);
                border-top: 1px solid var(--color-gray);
                border-bottom: 1px solid var(--color-gray);
                border-radius: 0 8px 8px 0;

                .name {
                  font-size: 20px;
                  color: var(--color-blue);
                  margin-bottom: 12px;
                }
                .item {
                  display: flex;
                  align-items: center;
                  gap: 5px;
                  margin-bottom: 3px;

                  .icon {
                    height: 24px;
                  }

                  span {
                    font-family: 'Mulish';
                    font-weight: 400;
                  }
                }

                .buttons {
                  display: flex;
                  gap: 30px;
                  margin-top: 25px;

                  a {
                    border-radius: 86px;
                    border: 1px solid var(--color-blue);
                    color: var(--color-blue);
