---
import Layout from "../layouts/main.astro";
import ChevronRightMini from "../components/icons/chevron-right-mini.astro";
---

<Layout>
  <div class="timescheet">
    <div class='animate-header'>
      <div class="page-info">
        <div class="text">
          <span>Discover TLC</span>
          <ChevronRightMini />
          <span>Team TLC</span>
          <ChevronRightMini />
          <span>Timecheet</span>
        </div>
      </div>
      <div class="main_banner">
        <h1>How To Complete Your LEAP Timesheet</h1>
        <p>How to complete your LEAP Timesheet video</p>
      </div>
    </div>

    <div class='animate-content'>
      <section class="video">
        <div class="container">
          <iframe
            src="https://www.youtube.com/embed/B7HIhmjPJ1Q?si=Zpw2Pk2PUWRRCXc4&controls=0"
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen></iframe>
        </div>
      </section>
      <section class="document">
        <div class="container">
          <iframe
            src="https://www.tlcnursing.com/wp-content/uploads/2023/02/Employee-Handbook-TLC-Nursing.pdf"
            frameborder="0"
            allowfullscreen></iframe>
        </div>
      </section>
    </div>
  </div>
</Layout>

<style lang="scss">
  .main_banner {
    height: 400px;
    background-color: #eef5ff;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    text-align: center;
    h1 {
      font-family: "Montserrat", sans-serif;
      font-size: 40px;
      font-style: normal;
      font-weight: 600;
      line-height: normal;
      text-align: center;
      color: var(--color-blue);
      margin: 0 0 8px;
    }

    p {
      font-family: "Mulish", sans-serif;
      font-size: 20px;
      font-style: normal;
      font-weight: 400;
      line-height: 130%;
      color: var(--color-blue);
      text-align: center;
    }
  }

  section.video {
    margin-top: -80px;
    .container {
      background-color: var(--color-gray);
      max-width: 890px;
      width: 100%;
      aspect-ratio: 16 / 9;
      border-radius: 14px;
      overflow: hidden;
      margin-bottom: 50px;

      position: relative;

      iframe {
        width: 100%;
        aspect-ratio: 16 / 9;
      }
    }
  }

  section.document {
    margin: 65px 0;
    iframe {
      width: 100%;
      height: 775px;
    }
  }

  @media screen and (max-width: 580px) {
    .main_banner {
      height: 290px;
      padding: 0 15px 55px 15px;

      h1 {
        font-size: 28px;
        font-weight: 600;
      }

      p {
        font-size: 16px;
        font-style: normal;
      }
    }
  }
</style>
